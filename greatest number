public class greatestNumber
{
    public static void main(String args[])
    {
        int a = 2, b = 1, c = 0, greatestNumber;

        greatestNumber = (a > b) ?
                (a > c ? a : c) :
                (b > c ? b : c);

        System.out.println("Largest number among " + a + ", " + b + " and " + c + " is " + greatestNumber + ". " );
    }
}

